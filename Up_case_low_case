def low(str):
    count=0
    for i in str:
        if(i.islower()):
            count=count+1
    return count
def up(str):
    count=0
    for i in str:
        if(i.isupper()):
            count=count+1
    return count
str=input("Enter the string:")   
print("No. of lowercase characters:", low(str))
print("No. of uppercase characters:", up(str))
